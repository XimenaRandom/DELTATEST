            align-items: center;
            gap: 8px;
        }

            section h3 .icon {
                color: #ffb22c;
                font-size: 22px;
            }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 15px;
        max-width: 600px;
        margin: 20px auto;
        text-align: left;
    }

        .card h4 {
            color: #ffb22c;
            font-size: 16px;
            margin-bottom: 6px;
        }

        .card p {
            color: #555;
            font-size: 14px;
        }

    .btn {
        background-color: #ffb22c;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 8px 20px;
        cursor: pointer;
        font-size: 13px;
        margin-top: 15px;
    }

        .btn:hover {
            background-color: #e5a51f;
        }

    footer {
        background-color: #e59f2d;
        color: white;
        padding: 40px 20px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        text-align: left;
        gap: 20px;
    }

        footer h5 {
            margin-top: 0;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        footer a {
            color: white;
            text-decoration: none;
            display: block;
            font-size: 13px;
            margin-bottom: 6px;
        }

            footer a:hover {
                text-decoration: underline;
            }

    .footer-logo {
        text-align: center;
        font-size: 20px;
    }
</style>

