*@{
    ViewData["Title"] = "Inicio de Sesión";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #fff;
        margin: 0;
        padding: 0;
    }

    /* Contenedor principal */
    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    /* Caja del formulario */
    .login-box {
        width: 400px;
        border: 1px solid #e6e6e6;
        border-radius: 8px;
        padding: 40px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        background-color: #fff;
        text-align: center;
    }

    .login-box h1 {
        color: #d59c45;
        font-weight: bold;
        margin-bottom: 30px;
        font-size: 32px;
    }

    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        font-size: 15px;
        color: #333;
        margin-bottom: 5px;
    }

    .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
    }

    .btn-login {
        background-color: #e5a650;
        border: none;
        color: white;
        font-size: 15px;
        font-weight: 500;
        padding: 10px 0;
        width: 100%;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-login:hover {
        background-color: #cf923f;
    }

    .forgot-password {
        margin-top: 15px;
        font-size: 14px;
    }

    .forgot-password a {
        text-decoration: none;
        color: #000;
    }

    .forgot-password a:hover {
        text-decoration: underline;
    }
</style>

<div class="login-container">
    <div class="login-box">
        <h1>INICIAR SESIÓN</h1>
        <form>
            <div class="form-group">
                <label>Correo</label>
                <input type="email" placeholder="Ingrese su correo" />
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" placeholder="Ingrese su contraseña" />
            </div>
            <button type="submit" class="btn-login">Iniciar Sesión</button>
            <div class="forgot-password">
                <a href="#">¿Olvidó su contraseña?</a>
            </div>
        </form>
    </div>
</div>

